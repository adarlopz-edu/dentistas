<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardview"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_height="510dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="25dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondo"
            android:alpha=".35">
        </ImageView>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/licencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licencia"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/fechanacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificacion"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/especialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialidad"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/horaapertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de Apertura"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>
            <TextView
                android:id="@+id/horacierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de Cierre"
                android:padding="5dp"
                android:textSize="25sp">
            </TextView>

            <Button
                android:id="@+id/llamar"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="llamar"
                android:onClick="llamar"
                app:icon="@drawable/phone"
                android:padding="5dp"
                android:textSize="20sp">
            </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>