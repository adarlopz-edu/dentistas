<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayuda"
    android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar">
        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="35dp"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/latobold"
                    android:text="Ayuda">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/latobold"
                    android:text="Ver">
                </TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Consulta los detalles completos de un dentista, incluyendo especialidad, servicios y contacto. También puedes llamar directamente al dentista desde esta sección.">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/latobold"
                    android:text="Registrar">
                </TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Agrega nuevos dentistas completando el formulario con información como nombre, licencia, especialidad, y contacto.">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/latobold"
                    android:text="Modificar">
                </TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Actualiza los datos de un dentista seleccionándolo desde la lista principal. Puedes editar información como horarios, dirección, o cualquier campo registrado previamente.">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/latobold"
                    android:text="Eliminar">
                </TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Borra uno o varios dentistas seleccionándolos de la lista. Verás solo su nombre y especialidad para facilitar la búsqueda.">
                </TextView>
        </LinearLayout>
</LinearLayout>